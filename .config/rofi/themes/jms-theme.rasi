* {
	background-color: #00000050;
	text-color:       #EFEFEF;
  font: "FiraCode Nerd Font 14";
 
	line-margin:     0;
	line-padding:    0;
	separator-style: "none";
	hide-scrollbar:  "true";
	margin:          0;
	padding:         0;
}

window {
	width: 50ch;
	border: 1px;
	border-color: #EFEFEF50;
  border-radius: 10px;
	orientation: horizontal;
	children:	 [mainbox];
}

mainbox {
	children: [entry,listview,mode-switcher,message];
  spacing: 0px;
  padding: 0px 0;
  border: 1px;
  border-color: #EFEFEF50;
}

button {
	padding: 8px 2px 8px 0ch;
}

button selected {
	background-color: #EFEFEF00;
	text-color:       #cba6f7;
}

inputbar {
	padding: 5px;
	spacing: 5px;
}

listview {
	fixed-height: 0;
  border: 0px;
  spacing: 5px;
  scrollbar: false;
  padding: 10px 10px 10px 1ch;
}

element {
	background-color: #00000000;
  border: 0;
  border-radius: 0px;
  padding: 3 0 3 4 ;
}

entry {
	expand:         false;
	text-color:     #cba6f7;
	vertical-align: 1;
	padding:        8px;
}

element selected {
	background-color: #31748f40;
	text-color:       #EFEFEF;
}

mode-switcher {
	padding:        8 0 0 0;
}

textbox {
  background-color: #EFEFEF50;
  padding: 8px;
	}

element-text {
	background-color:#00000000;
}

element-icon {
	background-color: #00000000;
}

